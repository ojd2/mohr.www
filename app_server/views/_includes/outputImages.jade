mixin image(title, distance, rating, address, src, size)
  
 if (size === 'small') 
  li.item.small  
   img(src= "#{src}").img-fluid.small
   div.item_details
    p.title= title
    p.distance= "Distance: " + distance
    p.rating= "Rating: " + rating
    p.address= "Address: " + address
 else if (size === 'medium')
  li.item.medium
   img(src= "#{src}").img-fluid.medium
   div.item_details 
    p.title= title
    p.distance= "Distance: " + distance
    p.rating= "Rating: " + rating
    p.address= "Address: " + address
 else if (size === 'regular')
  li.item.regular
   img(src= "#{src}").img-fluid.regular
   div.item_details 
